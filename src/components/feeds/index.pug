include ../common

+component('feeds')
  mixin feed(desc, num, details, weight, klass)
    .feed(class= klass)
      .text
        .inner Сказочное заморское яство
        .item-title Нямушка
        .description= desc
        .quantity
          .num= num
          |  порций
        .details= details
        .weight
          .num= weight
          .text кг

  .feeds
    .inner
      .title Ты сегодня покормил кота?

      +feed("с фуа-гра", 10, "мышь в подарок", "0,5")
      = '  '
      +feed("с рыбой", 40, "2 мыши в подарок", 2, "selected")
      = '  '
      +feed("с курой", 100, "5 мышей в подарок", 5, "disabled")
