include ../common

+component('feedContents')
  mixin feed(desc, num, details, weight, selectedText, klass, satisfaction)
    .feed(class= klass)
      .feed-content
        .text
          .inner Сказочное заморское яство
          .item-title Нямушка
          .description= desc
          .quantity
            .num= num
            |  порций
          .details= details
          if satisfaction
            .details заказчик доволен
          .weight
            .num= weight
            .text кг
      .comment
        .normal
          | Чего сидишь? Порадуй котэ,
          = " "
          a(href="#") купи.
        .selected= selectedText
        .disabled Печалька, #{desc} закончился.


  .feeds
    .inner
      .title Ты сегодня покормил кота?

      +feed("с фуа-гра", 10, "мышь в подарок", "0,5", "Печень утки разварная с артишоками.")
      = '  '
      +feed("с рыбой", 40, "2 мыши в подарок", 2, "Головы щучьи с чесноком да свежайшая сёмгушка.", "selected")
      = '  '
      +feed("с курой", 100, "5 мышей в подарок", 5, "Филе из цыплят с трюфелями в бульоне.", "disabled", true)
